<view>
  <view class="block">
    <label class="label">昵称</label>
    <input class="nname" placeholder="未填写" placeholder-class="placeholder" type="text" value=""></input>
  </view>
  <view class="block">
    <label class="label">姓名</label>
    <input class="name" placeholder="未填写" placeholder-class="placeholder" type="text" value=""></input>
  </view>
  <view class="block">
    <label class="label">手机号</label>
    <input class="phone" placeholder="未填写" placeholder-class="placeholder" type="number" value=""></input>
  </view>
  <view class="block">
    <view class="label">选择角色</view>
    <picker value="{{index}}" range="{{array}}">
      <view class="role">
        请选择{{array[index]}}
      </view>
    </picker>
  </view>
  <view class="block">
    <label class="label">公司名称</label>
    <input class="panName" placeholder="未填写" placeholder-class="placeholder" type="text" value=""></input>
  </view>
  <button size="mini">保存</button>
</view>
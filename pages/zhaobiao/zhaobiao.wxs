//对日期字符串进行截取
var date = function(val) {
  val = val.replace("T", " ")
  return val.substring(0, 10);
}

//判断审核和上架
var judge = function (a, b) {
  if (a == 1 && b == true) { //审核完成且未下架
    return 0;
  } else if (a == 1 && b == false) { //审核完成且下架
    return 1;
  } else if (a == 0) { //审核中且下架
    return 2;
  }
}
module.exports = {
  date: date,
  judge: judge
};